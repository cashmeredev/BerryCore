#!/bin/sh
# BerrySnip - Snippet & Notes Manager
# Launcher script for BerryCore

# Environment check
if [ -z "$NATIVE_TOOLS" ]; then
    NATIVE_TOOLS="/accounts/1000/shared/misc/berrycore"
fi

BERRYSNIP_DIR="${NATIVE_TOOLS}/lib/berrysnip"
BERRYSNIP_APP="${BERRYSNIP_DIR}/app.py"

# Check if app exists
if [ ! -f "$BERRYSNIP_APP" ]; then
    echo "Error: BerrySnip app not found at $BERRYSNIP_APP"
    exit 1
fi

# Check if Python 3 is available
if ! command -v python3 > /dev/null 2>&1; then
    echo "Error: Python 3 is not installed"
    echo "Install it with: qpkg install python3"
    exit 1
fi

# Run the app with all arguments
exec python3 "$BERRYSNIP_APP" "$@"



