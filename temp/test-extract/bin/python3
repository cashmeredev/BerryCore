#!/bin/bash
# Python 3.11 wrapper for BerryCore

# Get the BerryCore tools directory
SCRIPT_DIR="$(cd "$(dirname "$0")"; pwd)"
NATIVE_TOOLS="$(cd "$SCRIPT_DIR/.." && pwd)"

# Set PYTHONHOME to the Python installation directory
export PYTHONHOME="$NATIVE_TOOLS/lib/python3.11"

# Execute the actual Python binary
exec "$PYTHONHOME/tools/python3/python3" "$@"

